<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="compiler.todotomorrow.MeetingDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_above="@+id/lnly_bottomBtn_amd">

        <TextView
            android:id="@+id/tv_meetingTitle_amd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:text="Meeting with office members"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_shape"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/colorBlack"
                android:layout_margin="6dp"
                android:id="@+id/tv_address_amd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address: H4, F8, Banani, Dhaka - 1229" />

            <TextView
                android:textColor="@color/colorBlack"
                android:layout_margin="6dp"
                android:id="@+id/tv_time_amd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: 03.00PM" />

            <TextView
                android:textColor="@color/colorBlack"
                android:layout_margin="6dp"
                android:id="@+id/tv_date_amd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: 29.03.2018" />

            <TextView
                android:textColor="@color/colorBlack"
                android:layout_margin="6dp"
                android:id="@+id/tv_timeLeft_amd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time Left: 3 Day, 23 Hour, 30 Min" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_shape">

            <TextView
                android:textColor="@color/colorBlack"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="this is a paragraph Solutions are usually more efficient (faster, smaller) when
efficient executable code" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12sp"
        android:gravity="center"
        android:id="@+id/lnly_bottomBtn_amd"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:textColor="@color/colorBlack"
            android:id="@+id/btn_update_amd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_shape"
            android:text="update" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <Button
            android:textColor="@color/colorBlack"
            android:id="@+id/btn_delete_amd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_shape"
            android:text="delete" />
    </LinearLayout>

</RelativeLayout>
